# PostgreSQL Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=playwright_mcp
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_SSL=false
POSTGRES_MAX_CONNECTIONS=10
POSTGRES_IDLE_TIMEOUT=20
POSTGRES_MAX_LIFETIME=1800
POSTGRES_CONNECT_TIMEOUT=30

# Alternative: Use DATABASE_URL for connection
# DATABASE_URL=postgresql://username:password@localhost:5432/playwright_mcp

# Playwright MCP Server Configuration
PLAYWRIGHT_MCP_AUTH_TOKEN=your-secure-auth-token-here
MCP_AUTH_TOKEN=your-secure-auth-token-here
PLAYWRIGHT_ADMIN_TOKEN=your-admin-token-here

# Public paths that don't require authentication (comma-separated)
PLAYWRIGHT_MCP_PUBLIC_PATHS=/health,/ready,/keepalive,/status

# Server Configuration
PORT=3000
NODE_ENV=development

