{
  "name": "playwright-mcp-server",
  "version": "1.0.0",
  "description": "A Playwright MCP server with streamable HTTP support for Railway deployment",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "npx tsc",
    "start": "node --expose-gc --max-old-space-size=4096 dist/index.js",
    "start:stdio": "MODE=stdio node --expose-gc --max-old-space-size=4096 dist/index.js",
    "start:http": "MODE=http node --expose-gc --max-old-space-size=4096 dist/index.js",
    "start:minimal": "node --expose-gc --max-old-space-size=2048 dist/src/adapters/minimal-server.js",
    "start:monitor": "node --expose-gc --max-old-space-size=4096 dist/src/monitoring/monitor.js",
    "start:mcp-client": "node --expose-gc --max-old-space-size=4096 dist/src/clients/mcp-client.js",
    "start:http-adapter": "node --expose-gc --max-old-space-size=4096 dist/src/adapters/http-mcp-adapter.js",
    "start:railway-adapter": "node --expose-gc --max-old-space-size=4096 dist/src/adapters/railway-mcp-adapter.js",
    "dev": "tsx --expose-gc src/index.ts",
    "dev:stdio": "MODE=stdio tsx --expose-gc src/index.ts",
    "dev:http": "MODE=http tsx --expose-gc src/index.ts",
    "dev:monitor": "tsx --expose-gc src/monitoring/monitor.ts",
    "dev:mcp-client": "tsx --expose-gc src/clients/mcp-client.ts",
    "dev:http-adapter": "tsx --expose-gc src/adapters/http-mcp-adapter.ts",
    "dev:railway-adapter": "tsx --expose-gc src/adapters/railway-mcp-adapter.ts",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "lint": "eslint src/",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "cors": "^2.8.5",
    "express": "^4.21.0",
    "helmet": "^8.0.0",
    "playwright": "^1.48.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/node": "^22.18.8",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.9.0",
    "tsx": "^4.19.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
